<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/view_failed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_failed"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="An error has occurred!"
            android:textSize="40px"
            android:textStyle="bold|italic" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@android:color/transparent"
                    android:text="Name"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/txt_age"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:layout_weight="0.5"
                    android:background="@android:color/transparent"
                    android:text="age"
                    android:textAlignment="center" />
                <!--
                <Button
                    android:id="@+id/btn_filter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:text="filter"
                    android:onClick="goFilter"
                    android:layout_weight="0.5"
                    android:background="@color/White"/>
                -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/activity_horizontal_margin">

                <goodapp.company.kissmyass.Class.CircleImageView
                    android:id="@+id/img_profile"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:src="@drawable/default_profile" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/view_show_kissed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:src="@drawable/kiss2" />
            </RelativeLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/view_show_kiss"
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_height="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_weight=".5"
                    android:background="@android:color/transparent"
                    android:src="@drawable/cancel1" />

                <ImageView
                    android:id="@+id/img_message"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight=".5"
                    android:background="@android:color/transparent"
                    android:src="@drawable/message1" />

                <ImageView
                    android:id="@+id/img_kiss"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight=".5"
                    android:background="@android:color/transparent"
                    android:src="@drawable/kiss1" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>




</LinearLayout>